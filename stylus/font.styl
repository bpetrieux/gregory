}

h1,.h1
	font-family: 'Montserrat-UltraLight';
	margin-bottom: 24px;
	font-weight: 300;
	font-size: 34px;
	line-height: 40px;
	letter-spacing: 0px;
	+above($small)
		font-size: 38px;
		line-height: 42px;
		letter-spacing 2px
	+above($medium)
		letter-spacing: 6px;
		font-size: 50px;
		line-height:50px;
		margin-bottom: 50px;
h2,.h2
	font-size: 28px;
	line-height: 28px;
	margin-bottom:21px;
	font-weight: 300;
	font-family: "Montserrat-Regular";
	+above($medium)
		font-size: 32px;
		line-height: 32px;
		margin-bottom:19px;
		font-weight: 300;
h3,.h3
	font-size: 24px;
	line-height: 28px;
	margin 42px 0 20px 0
	font-family: "Montserrat-Light"; 
	+above($medium)
		font-size: 30px;
		line-height: 34px;
		margin-bottom: 22px;
h4,.h4
	font-size: 24px;
	line-height: 28px;
	font-weight 100
	margin 42px 0 20px 0
	font-family: 'Montserrat-UltraLight';
	font-weight: 300;
	+above($medium)
		font-size: 30px;
		line-height: 34px;
		margin-bottom: 22px;
	&.extend
		letter-spacing 6px
h5,.h5
	font-style: normal;
	font-family: "Montserrat-regular";  
	margin-bottom 9px
	font-size 16px
	line-height 18px
	+above($medium)
		line-height:24px
h6,.h6
	font-style: normal;
	font-family: "Montserrat-UltraLight";  
	margin-bottom 9px
	font-size 16px
	line-height 18px
	+above($medium)
		line-height:24px
p,li,a
	font-style: normal;
	font-family: "Montserrat-light";  
	margin-bottom 9px
	font-size 16px
	line-height 18px
	+above($medium)
		line-height:24px
a
	transition: color ease .5s;
	color $main
	&:hover
		color $black