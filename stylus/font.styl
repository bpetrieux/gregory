@import url('../SharedAssets/fonts/icomoon.css');
@font-face {
	font-family: 'icomoon';
	src:  url('../SharedAssets/fonts/icomoon.eot?syn4l8');
	src:  url('../SharedAssets/fonts/icomoon.eot?syn4l8#iefix') format('embedded-opentype'),
	url('../SharedAssets/fonts/icomoon.ttf?syn4l8') format('truetype'),
	url('../SharedAssets/fonts/icomoon.woff?syn4l8') format('woff'),
	url('../SharedAssets/fonts/icomoon.svg?syn4l8#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}
