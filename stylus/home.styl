// home
.hero
	background: url(../Home/assets/images/headerbg.jpg) no-repeat;
	background-size: cover;
	height: 100vh;
	width: 100%;
	background-position:78%
	color: white
	+above($large)
		background-attachment fixed
	.container
		display: flex;
		flex-direction: column;
		justify-content:center;
		align-items:center
		height inherit
		width 100%
		text-align center
	&_tagline
		&-1
			padding: 20px 0px;
			border-bottom: 1px solid #fff;
			color: #fff;
			font-size: 70px;
			line-height:70px;
			margin-bottom: 50px;
		&-2
			display none
			+above($medium)
				display block
				margin-top 0
			span
				display block
		&-3
			display none
			+above($medium)
				display block
	.icon-play2
		color white
		font-size 82px
		text-decoration none
		margin-top 42px
		display block
		&:hover
			color $main
.section2
	text-align center
	color $main
	padding 75px 0
	box-shadow: 0px 3px 9px rgba(0,0,0,0.1) inset;
	+above($medium)
		padding 100px 0
.features
	background-color $grey;
	color $black
	box-shadow: 0px 3px 9px rgba(0,0,0,0.1) inset;
	position: relative;
	display block
	padding 35px 0 75px 0
	+above($small)
		padding 100px 0
	.container
		display block
		width 100%
		+above($large)
			display flex
			flex-direction row
			align-items flex-start
			justify-content center
	&_box
		display flex
		flex-direction column
		align-items center
		justify-content center
		padding 20px 0
		+above($small)
			padding 40px 0
			flex-direction row
			justify-content flex-start
		+above($large)
			padding 20px 0
			flex-grow: 1;
			display: flex;
			align-items: center;
			flex-direction: column;
			flex-basis: 25%;
	&_text
		text-align center
		width 100%
		+above($small)
			text-align left
			padding-left 32px
			h4
				margin-top 0
			br
				display none
		+above($medium)
			margin-top 22px
		+above($large)
			text-align center
			padding 0 16px
			br
				display block
			
				
	.more
		display block
		text-align center
		margin-top 50px
		+above($medium)
			margin-top 100px
		a
			margin 0px auto 100px auto
.advantages
	padding 50px 0
	background: url(../Home/assets/images/section4-bg.jpg) no-repeat;
	background-size:cover
	color white
	text-align center
	.container
		max-width 880px
	+above($medium)
		padding 100px 0
	+above($large)
		// -webkit-mask-image: url(../Home/assets/images/mask.png);
		// -webkit-mask-size: 100%;
		// mask-size: 100%;
		// -webkit-mask-position: bottom;
		// mask-position: top;
		// -webkit-mask-repeat: no-repeat;
		// mask-repeat: no-repeat;
		background-attachment fixed
.section5
	color $main
	padding 50px 0
	box-shadow: 0px 3px 9px rgba(0,0,0,0.1) inset;
	+above($large)
		padding 100px 0
	&_content
		width 100%
		li
			display flex
			flex-direction row
			justify-content flex-start
			align-items center
			.icon
				margin-right 16px
			+above($large)
				padding-left 30px
	.video-wrapper
		+above($large)
			lost-column: 2/3;
	.list
		+above($large)
			padding-left 20px
			lost-column: 1/3;
	.h4
		+above($large)
			margin-top 0
			margin-bottom 60px
.section6
	background-color $contrast
	box-shadow: 0px 3px 9px rgba(0,0,0,0.1) inset;
	padding 75px 0
	text-align center
	+above($medium)
		padding 100px 0
	&_box
		display flex
		flex-direction column
		align-items center
		justify-content center
		padding 20px 0
		+above($small)
			padding 40px 0
		+above($medium)
			lost-column 1/2
		+above($large)
			lost-column 1/4
	h3
		margin-top 20px
.section7
	padding 50px 0
	box-shadow: 0px 3px 9px rgba(0,0,0,0.1) inset;
	text-align center
	color $main
	+above($large)
		padding 100px 0
	&_box
		display flex
		flex-direction column
		justify-content center
		align-items flex-start
		width 100%
		padding 30px 0
		max-width 360px
		+above($large)
			padding 75px 0 0 0
			lost-column 1/3
			justify-content flex-start
	&_content
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		+above($large)
			align-items: flex-start;
			flex-direction: row;
	&_text
		text-align center
		width 100%
		+above($large)
			text-align left
			display flex
			flex-direction column
			justify-content flex-start
			align-items flex-start
		h3
			margin-top 12px
	.icon
		width 100%
		text-align left
		background: url(../Home/assets/images/arrow.png) no-repeat right center;
		span
			font-size 32px
.section8
	text-align center
	padding 75px 0
	background-color #ebebeb;
	box-shadow: 0px 3px 9px rgba(0,0,0,0.1) inset;
	+above($medium)
		padding 100px 0
	&_pricing
		max-width: 792px;
		display: block;
		margin: 0 auto;
	&_table
		max-width 340px
		width 100%
		display block
		margin 40px auto
		border 1px solid $contrast
		background-color white
		box-shadow: 0px 3px 9px rgba(0,0,0,0.1) inset;
		+above($medium)
			lost-column 1/2
			display flex
			flex-direction column
	&_header
		background-color $main
		color white
		text-align center
		padding 20px 0
		display flex
		flex-direction column
		justify-content center
		align-items center
	&_content
		padding 20px 40px 0 40px
		min-height: 236px;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: space-between;
	.btn
		display inline-block
		margin 12px auto 24px auto
.circle
	width:140px;
	min-width 140px
	height:140px;
	border-radius: 140px;
	background-color:white;
	font-size: 40px;
	line-height: 140px;
	text-align: center;
	text-shadow: 1px 1px 1px rgba(0, 0, 0, .3);
	color $main
	display flex
	flex-direction column
	justify-content center
	align-items center
	h2
		margin 0
		font-size: 40px;
		line-height: 40px;
		letter-spacing: 0px;
	h6
		margin 0
sup
	font-size: 25px;
	vertical-align: text-top;