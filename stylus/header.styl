.header
	position: absolute;
	top: 0;
	left: 0;
	z-index: 1;
	width:100%;
	.container
		display flex
		flex-direction row
		align-items center
		justify-content space-between
		width 100%
		position relative
	&_logo
		padding 12px 0
		z-index 1
		+above($large)
			padding 20px 0
		img
			width 162px
			+above($small)
				width 180px
			+above($large)
				width 242px
	&_navigation
		display none
		width 0
		+above($large)
			display flex
			flex-direction row
			justify-content center
			align-items: flex-start;
			height initial
			width initial
			position relative
		li
			margin-bottom 0
			transition: background-color ease .1s;
			border-radius 4px
		.menu
			display block
			position relative
			&:hover
				background-color $black
				.header_navigation-sub
					display block
			a
				padding: 12px 16px;
				text-decoration: none;
				color: #fff;
				display: block;
				margin-bottom: 0;
			.header_navigation-sub
				position absolute
				top: 48px;
				left: 0;
				display none
				box-shadow: 3px 3px 1px 0px rgba(235, 235, 235, .4)
				background-color white
				border-radius 4px
				li
					margin-left 0
					min-width 150px
					&:hover
						a
							background-color $black
							color white
				a
					background-color white
					color $black
	.cta
		cursor: pointer;
		display: block;
		width: initial;
		color white
		background-color $black
		border-radius 4px
		padding: 12px 18px;
		transition: background-color ease .5s;
		text-decoration none
		margin-left: 32px;
		font-family: 'Montserrat-regular';
		&:hover
			background-color $main
.menu-mobile-actif
	.header
		position fixed
	.header_navigation
		+below($medium)
			width 100%!important
		+below($large)
			display block
			position fixed
			width 50%
			padding 100px 20px 0 30px
			height 100vh
			background-color: rgba(37, 37, 37, 0.99);
			color white
			top: 0;
			right: 0;
			li
				margin 0
				padding 0
				border-bottom 1px solid $grey
				cursor pointer
				&:last-child
					text-align: center;
					border-bottom none
				&:hover
					background-color $main
					border-bottom 1px solid $main
					&:last-child
						background-color $black
						border-bottom none
					.header_navigation-sub
						display none
					a
						border none
					.btn
						background-color $main
						color white
				ul
					display none
			a
				color white
				width 100%
				padding 20px 16px
				display block
				margin-bottom 0
			.cta
				background-color white
				color $black
				text-align center
				display inline-block
				width initial
				margin 40px auto
				padding 20px 40px
				font-family: 'Montserrat-Bold';
				text-transform uppercase
				&:hover
					background-color $main
					color white